// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "tab_size": 2,
  "preferred_line_length": 80,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka Nerd Font",
  "confirm_quit": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "soft_wrap": "none",
  "load_direnv": "shell_hook",
  "auto_update": true,
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "format_on_save": "on",
  "use_autoclose": true,
  "use_auto_surround": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "dock": "bottom",
    "env": {},
    "font_family": "Iosevka Nerd Font",
    "font_size": 16,
    "line_height": "comfortable",
    "option_as_meta": true,
    "button": false,
    "shell": {
      "with_arguments": {
        "program": "pwsh",
        "args": ["-NoLogo"]
      }
    },
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "use_multiline_find": true
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  }
}
